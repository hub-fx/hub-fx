---
interface Props {
  sectionLinks?: {
    label: string;
    link: string;
  }[]
}

const { sectionLinks } = Astro.props;
---
<div class="content-page">
  <div class="content-page__content px-3 px-md-4 py-4">
    <slot />
  </div>
  {sectionLinks?.length && <div class="content-page__section-links">
    <nav>
      <ul class={`navbar-nav flex-column mb-2 mb-lg-0`}>
        {sectionLinks.map(({ label, link }) => {
          return <li class="nav-item me-3">
            <a class="nav-link" href={`${link}`}>{label}</a>
          </li>
        })}
      </ul>
    </nav>

  </div>}
</div>

<style lang="scss">
  .content-page {
    display: flex;
    &__section-links {
      background-color: #fff;
      overflow: auto;
      padding: 2rem;
      display: none;
      height: calc(100vh - 77px);
      min-width: 250px;
      position: sticky;
      top: 77px;

      @media screen and (min-width: 991px) {
        display: flex;
      }

      ul {
        list-style: none;
        padding-left: 0;

        li {
          width: 100%;
        }
      }

      }
  }
</style>