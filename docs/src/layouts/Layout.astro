---
import Header from '../components/Header.astro';
import TableOfContents from '../components/TableOfContents.astro';
// import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	showDesktopNav?: boolean;
	hideHamburger?: boolean
	showGetStartedBtn?: boolean;
}

const { title, showDesktopNav = true, hideHamburger = false, showGetStartedBtn = false } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header hideHamburger={hideHamburger} showGetStartedBtn={showGetStartedBtn} />
		<div class="d-flex">
			{showDesktopNav && <TableOfContents className="d-none d-lg-flex desktop" />}
			<main>
				<slot />
			</main>
		</div>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
		<script src="https://kit.fontawesome.com/fdd5cdd029.js" crossorigin="anonymous"></script>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		scroll-padding-top: 150px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	main {
		flex-grow: 1;
		max-width: 100%;
	}

	.undecorate-btn {
		border: 0;
		background: transparent;
	}

	.astro-code {
		padding: 2rem;
		border-radius: 8px;
		overflow: auto;
		margin-bottom: 1.5rem;
		max-width: calc(100vw - 32px);

		@media screen and (min-width: 576px) {
			max-width: calc(100vw - 58px);
		}

		@media screen and (min-width: 768px) {
			font-size: 1rem;
		}
	}

	h1, h2, h3, h4, h5, h6 {
		font-weight: 700;
		/* padding-bottom: 0.5rem; */
		margin-bottom: 1rem;
	}

	.bg-primary {
		background-color: #4188d1;
	}

	.btn {
		&.btn-primary {
			background-color: #4188d1;
			font-weight: bold;
		}

		&.btn-outline-primary, &.btn-outline-primary:focus {
			background-color: white;
			font-weight: bold;
			color: #4188d1;
		}
	}
</style>
