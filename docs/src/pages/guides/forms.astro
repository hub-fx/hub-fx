---
import Layout from "../../layouts/Layout.astro"
import ContentPageLayout from "../../layouts/ContentPageLayout.astro"
import { getEntry } from "astro:content";

const forms = await getEntry('guides', 'forms/forms');
const { Content } = await forms.render();

const basicFormGroup = await getEntry('guides', 'forms/examples/basic-form-group/basic-form-group');
const { Content: BasicFormGroup  } = await basicFormGroup.render();

const reactBasicFormGroup = await getEntry('guides', 'forms/examples/basic-form-group/react-basic-form-group');
const { Content: ReactBasicFormGroup  } = await reactBasicFormGroup.render();

const vanillaJsBasicFormGroup = await getEntry('guides', 'forms/examples/basic-form-group/vanilla-js-basic-form-group');
const { Content: VanillaJSBasicFormGroup  } = await vanillaJsBasicFormGroup.render();

const validation = await getEntry('guides', 'forms/examples/validation/validation');
const { Content: Validation  } = await validation.render();

const reactValidation = await getEntry('guides', 'forms/examples/validation/react-validation');
const { Content: ReactValidation  } = await reactValidation.render();

const vanillaJsValidation = await getEntry('guides', 'forms/examples/validation/vanilla-js-validation');
const { Content: VanillaJSValidation  } = await vanillaJsValidation.render();

const asyncValidation = await getEntry('guides', 'forms/examples/async-validation/async-validation');
const { Content: AsyncValidation  } = await asyncValidation.render();

const reactAsyncValidation = await getEntry('guides', 'forms/examples/async-validation/react-async-validation');
const { Content: ReactAsyncValidation  } = await reactAsyncValidation.render();

const vanillaJsAsyncValidation = await getEntry('guides', 'forms/examples/async-validation/vanilla-js-async-validation');
const { Content: VanillaJSAsyncValidation  } = await vanillaJsAsyncValidation.render();

const sectionLinks: { label: string, link: string}[] = [
  { label: 'Installation', link: '#installation'},
    { label: 'Basic Form Group', link: '#basic-form-group' },
    { label: 'Validation', link: '#validation-example' },
    { label: 'Async Validation', link: '#async-validation' },
    { label: 'Normalizing Values', link: '#normalizing-values' },
    { label: 'Custom Reducer', link: '#custom-reducer-example' },
];
---

<Layout title="Reactables - Forms">
  <ContentPageLayout sectionLinks={sectionLinks}>
    <Content />
    <!-- Basic Form Group -->
    <BasicFormGroup />
    <h5>Bind RxBasicFormGroup to View</h5>
    <ul class="nav nav-tabs">
      <li class="nav-item">
          <a href="#react-basic-form-group" class="nav-link active" data-bs-toggle="tab">
            <img src="/React.png" width="50" title="React Basic Form Group"/>
          </a>
      </li>
      <li class="nav-item">
          <a href="#vanilla-js-basic-form-group" class="nav-link" data-bs-toggle="tab">
            <img src="/VanillaJS.jpg" width="50" title="Basic Form Group VanillaJS" />
          </a>
      </li>
    </ul>
    <div class="tab-content pt-3">
      <div class="tab-pane fade show active" id="react-basic-form-group">
        <ReactBasicFormGroup />
      </div>
      <div class="tab-pane fade" id="vanilla-js-basic-form-group">
        <VanillaJSBasicFormGroup />
      </div>
    </div>

    <br />

    <!-- Form Async Validation -->
    <AsyncValidation />
    <h5>Bind RxFormAsyncValidation to View</h5>
    <ul class="nav nav-tabs">
      <li class="nav-item">
          <a href="#react-async-validation" class="nav-link active" data-bs-toggle="tab">
            <img src="/React.png" width="50" title="React Form Async Validation"/>
          </a>
      </li>
      <li class="nav-item">
          <a href="#vanilla-js-async-validation" class="nav-link" data-bs-toggle="tab">
            <img src="/VanillaJS.jpg" width="50" title="Form Async Validation VanillaJS" />
          </a>
      </li>
    </ul>
    <div class="tab-content pt-3">
      <div class="tab-pane fade show active" id="react-async-validation">
        <ReactAsyncValidation />
      </div>
      <div class="tab-pane fade" id="vanilla-js-async-validation">
        <VanillaJSAsyncValidation />
      </div>
    </div>

    <br />
  </ContentPageLayout>
</Layout>
