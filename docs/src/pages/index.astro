---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Reactables - Home" showDesktopNav={false} hideHamburger showGetStartedBtn>
	<div class="home-page">
		<section class="hero">
			<div class="container">
				<img class="hero__logo mb-3" src="/white-transparent.png" />
				<h1>Reactables</h1>
				<p>A scalable, framework-agnostic state management API</p>

				<a href="/getting-started/introduction">
					<button class="btn btn-outline-primary">Get Started</button>
				</a>
			</div>
		</section>
</div>
</Layout>

<style lang="scss">
	.hero {
		color: #fff;
		text-align: center;
		padding-top: 6.5rem;
		padding-bottom: 6.5rem;
		background-color: #4188d1;

		&__logo {
			width: 100px;
		}
	}
</style>
