---
import Layout from '../../layouts/Layout.astro';
import ContentPageLayout from '../../layouts/ContentPageLayout.astro';
import { getEntry } from 'astro:content';
const entry = await getEntry('getting-started', 'core-concepts');
const { Content } = await entry.render();
const sectionLinks= [
  { label: 'Reactable Interface', link: "#reactable-interface" },
  { label: 'Reactable Primitive', link: "#reactable-primitive" },
  { label: 'Composition and Reactive Programming', link: "#composition" },
]
---
<Layout title="Reactables - Core Concepts">
  <ContentPageLayout
    sectionLinks={sectionLinks}
    editPageLink={{ link: 'https://github.com/reactables/reactables/edit/main/docs/src/content/getting-started/core-concepts.md'}}
    prevLink={{label: 'Introduction', link: '/getting-started/introduction'}}
    nextLink={{label: 'Examples', link: '/guides/examples'}}
  >
    <Content />
  </ContentPageLayout>
</Layout>
<style is:global>
  a.rx-example { text-align: center; display: block;}
</style>